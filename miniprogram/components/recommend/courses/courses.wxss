.courses{
  height: 550rpx;
}
.flex{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.list{
  width: 350rpx;
  height: 250rpx;
}
.list>image{
  width: 350rpx;
  height: 200rpx;
}
.list>.title{
  font-size: 12px;
  line-height: 50rpx;
  color: #aaa;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}